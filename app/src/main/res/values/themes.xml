<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SIPMobile" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SIPMobile" parent="Base.Theme.SIPMobile" />
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration -->
        <item name="windowSplashScreenBackground">@color/darkBlue</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated drawable.
         One of these is required -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>

        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">2500</item>

        <!-- Set the theme of the activity that directly follows your splash screen. This is required -->
        <item name="postSplashScreenTheme">@style/Base.Theme.SIPMobile</item>
    </style>

    <!-- Customize color for DatePickerDialog. -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/darkBlue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogButton.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomDialogButton.Negative</item>
    </style>

    <!-- Customize color button OK in DatePickerDialog. -->
    <style name="CustomDialogButton.Positive" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
    </style>

    <!-- Customize color button Cancel in DatePickerDialog. -->
    <style name="CustomDialogButton.Negative" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>